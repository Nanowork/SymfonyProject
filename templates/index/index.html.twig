{% extends 'base.html.twig' %}

{% block title %}HomePage{% endblock %}

{% block body %}
                <h2>{{ 'List of Products'|trans }}</h2>

                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th>{{ 'Product'|trans }}</th>
                        <th>{{ 'Price'|trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.name }}</td>
                            <td>{{ product.price|number_format(2, ',', ' ') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
{% endblock %}